<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.com.rubyicl.gpms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CrashActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.MaterialDetailsActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".activity.NewMaterialActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".activity.RegulationDetailsActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".activity.NewRegulationActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>